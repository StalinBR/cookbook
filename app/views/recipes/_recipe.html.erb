<div class="card promoting-card">
    <div class="card-body d-flex flex-row">
        <div>
            <!-- Title -->
            <h1 class="card-title font-weight-bold mb-2"><%= link_to recipe.title, recipe  %></h4>
            <!-- Subtitle -->
            <p class="card-text"><i class="far fa-clock pr-2"></i><%= recipe.created_at.to_date %></p>
        </div>
    </div>


    <!-- Card image -->
    <div class>
        <% if recipe.photo.attached? %>
            <%= image_tag(recipe.photo, class: 'card-img-top') %>
        <% end %>
    </div>

  <!-- Card content -->
  <div class="card-body">
    <div>    

        <ul>
        <li><%= recipe.recipe_type.name %></li>
        <li><%= recipe.cuisine.name %></li>
        <li><%= recipe.difficulty %></li>
        <li><%= recipe.cook_time %> minutos</li>
        </ul>

        <small class="text-muted cat">
        <i class="far fa-clock text-info"></i> <%= recipe.cook_time %>
        <i class="fas fa-users text-info"></i> <%= recipe.difficulty %>
        </small>
    </div>

  </div>



</div>